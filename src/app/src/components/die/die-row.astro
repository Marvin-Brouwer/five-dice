---
import DieDot from "./die-dot.astro";
import type { Face } from "./die";

interface Props {
    face: Face, 
    rowName: keyof Face
}

const { face, rowName } = Astro.props;

var row = face[rowName];
---

<DieDot row={row} columnName="left" />
<DieDot row={row} columnName="middle" />
<DieDot row={row} columnName="right" />