---
const title = "Five dice";
const description = "A turn-based dice game that can be played anywhere.";

const baseHost = import.meta.env.PROD
	? import.meta.env.SITE
	: new URL(Astro.request.url).origin;

const url = baseHost + import.meta.env.BASE_URL;
const image = `${url}favicon.svg`;
---

<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:type" content="website" />
<meta property="og:url" content={url} />
<meta property="og:image" content={image} />

<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={image} />
<meta name="twitter:site" content={url} />
<meta name="twitter:card" content="app">
<meta name="twitter:creator" content="@MarvinBrouwer" />